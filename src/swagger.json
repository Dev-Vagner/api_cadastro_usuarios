{
    "openapi": "3.0.0",
    "info": {
        "title": "API - Cadastro de usuários",
        "description": "Essa API tem como objetivo cadastrar e realizar a autenticação de usuários",
        "contact": {
            "email": "vagnerbackend@gmail.com"
        },
        "license": {
            "name": "MIT License"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8686",
            "description": "API de test"
        }
    ],
    "paths": {
        "/": {
            "get":{
                "sumary": "Rota de teste",
                "description": "Essa rota servirá para testar se a API está rodando ou não!",
                "tags": ["Test"],
                "responses": {
                    "200": {
                        "description": "OK!"
                    }
                }
            }
        },
        "/user": {
            "post":{
                "sumary": "Cadastro de usuário",
                "description": "Essa rota servirá para cadastrar um novo usuário. Obs.: O nome do usuário deverá conter pelo menos 3 caracteres e não poderá conter 2 espaços vazios seguidos, e a senha deverá conter pelo menos 5 caracteres e não poderá conter nenhum espaço vazio!",
                "tags": ["User"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            },
                            "examples": {
                                "user": {
                                    "value": {
                                        "name": "Exemplo",
                                        "email": "exemplo@email.com",
                                        "password": "exemplo123"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Se o usuário for cadastrado com sucesso!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "sucess": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Se algum campo for inexistente ou tiver o formato incorreto!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "Se o email já estiver cadastrado!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Se ocorrer algum erro interno no servidor!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/login": {
            "post":{
                "sumary": "Autenticação do usuário",
                "description": "Essa rota servirá para gerar o token de autenticação do usuário",
                "tags": ["User"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            },
                            "examples": {
                                "user": {
                                    "value": {
                                        "email": "exemplo@email.com",
                                        "password": "exemplo123"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Se o login for realizado com sucesso!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "token": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Se algum dos campos for inexistente!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Se o email ou senha estiver incorretos!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Se ocorrer algum erro interno no servidor!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users": {
            "get":{
                "sumary": "Listar todos os usuários",
                "description": "Essa rota servirá para listar o ID, nome e email de todos os usuários!",
                "tags": ["User"],
                "security": [{"bearerAuth": [] }],
                "responses": {
                    "200": {
                        "description": "Se for retornado os dados dos usuários com sucesso!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "format": "int32"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "email": {
                                            "type": "string"
                                        }  
                                    }
 
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Se o usuário não estiver autenticado!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Se ocorrer algum erro interno no servidor!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/user/{id}": {
            "get":{
                "sumary": "Buscar usuários pelo ID",
                "description": "Essa rota servirá para buscar os dados de um usuário específico, pelo ID!",
                "tags": ["User"],
                "security": [{"bearerAuth": [] }],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID do usuário",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Se for retornado os dados do usuário com sucesso!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "format": "int32"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "email": {
                                            "type": "string"
                                        }  
                                    }
 
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Se o usuário não estiver autenticado!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Se o ID do usuário não for encontrado no banco de dados!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Se ocorrer algum erro interno no servidor!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "sumary": "Editar usuários pelo ID",
                "description": "Essa rota servirá para editar os dados do usuário pelo ID!",
                "tags": ["User"],
                "security": [{"bearerAuth": [] }],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID do usuário",
                        "required": true
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    }
                                }
                            },
                            "examples": {
                                "user": {
                                    "value": {
                                        "name": "Exemplo",
                                        "email": "exemplo@email.com"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Se os dados do usuário forem alterados com sucesso!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "sucess": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Se algum campo editado for inexistente ou tiver o formato incorreto!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Se o usuário não estiver autenticado ou o ID não corresponder ao ID do usuário logado!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "Se o usuário alterar o email para um email já cadastrado!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Se ocorrer algum erro interno no servidor!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "sumary": "Deletar o usuário pelo ID",
                "description": "Essa rota servirá para deletar os dados do usuário pelo ID!",
                "tags": ["User"],
                "security": [{"bearerAuth": [] }],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID do usuário",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Se os dados do usuário forem deletados com sucesso!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "sucess": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Se o usuário não estiver autenticado ou o ID não corresponder ao ID do usuário logado!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
